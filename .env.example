# ==========================================
# Configurações de Produção - Sistema de Férias
# ==========================================

# Flask
FLASK_ENV=production
FLASK_DEBUG=False
PORT=8000

# Segurança (IMPORTANTE: Gerar chave secreta forte em produção)
# Gerar com: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Cookies seguros (habilitar apenas com HTTPS)
SESSION_COOKIE_SECURE=False

# Gunicorn Workers (regra: 2-4 x número de CPUs)
WORKERS=4
TIMEOUT=120

# ==========================================
# Instruções de Uso
# ==========================================
# 1. Copiar este arquivo: cp .env.example .env
# 2. Editar .env e configurar valores reais
# 3. Gerar SECRET_KEY segura com: python -c "import secrets; print(secrets.token_hex(32))"
# 4. Configurar SESSION_COOKIE_SECURE=True se usar HTTPS
# 5. NUNCA commitar o arquivo .env no Git
